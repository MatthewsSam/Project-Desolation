extends Button

#----------------------------------------------------------------------------------------------------
#
#----------------------------------------------------------------------------------------------------

export var option_a = "A"
export var option_b = "B"

var option_count = 1

export var label_a = "Switch to B"
export var label_b = "Switch to A"

var btn_label


#----------------------------------------------------------------------------------------------------
# _ready
#----------------------------------------------------------------------------------------------------

func _ready():
	btn_label = label_a
	set_process(true)


#----------------------------------------------------------------------------------------------------
# _process
#----------------------------------------------------------------------------------------------------

func _process(delta):
	get_node("../btn_switch").set_text(str(btn_label))


#----------------------------------------------------------------------------------------------------
# _on_btn_pressed
#----------------------------------------------------------------------------------------------------

func _on_btn_switch_pressed():

	if (option_count == 1):
		option_count = 2
		btn_label = label_b

		get_node(str("../", option_a)).hide()
		get_node(str("../", option_b)).show()


	elif (option_count == 2):
		option_count = 1
		btn_label = label_a

		get_node(str("../", option_a)).show()
		get_node(str("../", option_b)).hide()


#----------------------------------------------------------------------------------------------------
# end
#----------------------------------------------------------------------------------------------------
